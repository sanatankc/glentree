                { image_desktop: slide1.src, image_mobile: slide1MB.src, position: 'center' },
                { image_desktop: slide2.src, image_mobile: slide2MB.src, position: 'center' },
                { image_desktop: slide3.src, image_mobile: slide2MB.src, position: 'center' }
